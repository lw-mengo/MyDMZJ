<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/novel_rv_item_two_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_novel_cover_first"
        android:layout_width="100dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/image_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/novel_rv_item_two_title"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_novel_cover_second"
        android:layout_width="100dp"
        android:layout_height="132dp"
        android:contentDescription="@string/image_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toTopOf="@+id/imageView_novel_cover_first"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_novel_cover_third"
        android:layout_width="100dp"
        android:layout_height="132dp"
        android:contentDescription="@string/image_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/imageView_novel_cover_second"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/novel_rv_item_two_title_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxEms="7"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_novel_cover_first"
        app:layout_constraintTop_toBottomOf="@+id/imageView_novel_cover_first" />

    <TextView
        android:id="@+id/novel_rv_item_two_title_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="7"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_novel_cover_second"
        app:layout_constraintTop_toTopOf="@+id/novel_rv_item_two_title_one" />

    <TextView
        android:id="@+id/novel_rv_item_two_title_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="7"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_novel_cover_third"
        app:layout_constraintTop_toTopOf="@+id/novel_rv_item_two_title_two" />

    <TextView
        android:id="@+id/textView_novel__tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:maxEms="9"
        android:maxLines="1"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/novel_rv_item_two_title_one"
        app:layout_constraintTop_toBottomOf="@+id/novel_rv_item_two_title_one" />

    <TextView
        android:id="@+id/textView_novel_tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:maxEms="9"
        android:maxLines="1"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/novel_rv_item_two_title_two"
        app:layout_constraintTop_toTopOf="@+id/textView_novel__tv_one" />

    <TextView
        android:id="@+id/textView_novel_tv_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:maxEms="9"
        android:maxLines="1"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/novel_rv_item_two_title_third"
        app:layout_constraintTop_toTopOf="@+id/textView_novel_tv_two" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />
</androidx.constraintlayout.widget.ConstraintLayout>